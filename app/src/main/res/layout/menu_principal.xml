<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Menu_principal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:id="@+id/b_map"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="37dp"
        android:onClick="onClickMapa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mejoras"
        android:id="@+id/b_updates"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/b_map"
        android:onClick="onClickMejoras" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coleccionables"
        android:id="@+id/b_coleccionables"
        android:layout_below="@+id/b_updates"
        android:layout_alignStart="@+id/b_updates"
        android:onClick="onClickColeccionables"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:id="@+id/b_perfil"
        android:layout_below="@+id/b_coleccionables"
        android:layout_alignStart="@+id/b_coleccionables"
        android:onClick="onClickPerfil"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/b_salida"
        android:layout_below="@+id/b_coleccionables"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:onClick="onClickSalir"/>
</RelativeLayout>
